@model IEnumerable<baithi1.Models.Book>

@{
    ViewData["Title"] = "ListBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListBook</h1>

<p>
    <a asp-controller="Books" asp-action="CreateBooK">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TacGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheLoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TacGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheLoai)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBook", new {  id=item.ID }) |
               
                @Html.ActionLink("Delete", "DeleteBook", new { id=item.ID  })
            </td>
        </tr>
}
    </tbody>
</table>
